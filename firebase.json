{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html",
        "functions": {
          "engines": {"node": "12"},
          "runtime": "nodejs12"
        }
      }
    ]
  }
}
